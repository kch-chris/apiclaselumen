{
    "openapi": "3.0.0",
    "info": {
        "title": "My Curso Api Lumen",
        "description": "Lumen Swagger Api",
        "license": {
            "name": "my api"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api/v1",
            "description": "Api del curso de Lumen"
        }
